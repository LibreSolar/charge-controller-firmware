/dts-v1/;
#include <st/f0/stm32f072Xb.dtsi>

/ {
	model = "Libre Solar MPPT 2420 LC";
	compatible = "st,stm32f072";

	pcb {
		compatible = "charge-controller";

		type = "MPPT 2420 LC";
		version-str = "v0.10";
		version-num = <10>;

		hs-voltage-max = <55>;
		ls-voltage-max = <32>;
	};

	dcdc {
		compatible = "dcdc";
		pwm-frequency = <70000>;
		pwm-deadtime = <300>;
		current-max = <20>;
	};

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		pwr {
			gpios = <&gpiob 14 GPIO_ACTIVE_HIGH>;
			label = "LED GND";
		};
		load {
			gpios = <&gpiob 15 GPIO_ACTIVE_HIGH>;
			label = "LED Load";
		};
	};

	outputs {
		compatible = "outputs";
		load {
			label = "Load output";
			gpios = <&gpiob 2 GPIO_ACTIVE_LOW>;
			current-max = <20>;
		};
		uext_en {
			label = "UEXT enable";
			gpios = <&gpioc 14 GPIO_ACTIVE_LOW>;
		};
		can_en {
			label = "CAN disable / standby";
			gpios = <&gpioa 15 GPIO_ACTIVE_LOW>;
		};
		aux_en {
			label = "5V output enable";
			gpios = <&gpiob 12 GPIO_ACTIVE_HIGH>;
		};
		vbus_en {
			label = "CAN bus power supply enable";
			gpios = <&gpioc 15 GPIO_ACTIVE_LOW>;
		};
	};

	v-low {
		compatible = "adc-gain";
		io-channels = <&adc1 0>;
		numerator = <110000>;
		denominator = <10000>;
	};

	v-high {
		compatible = "adc-gain";
		io-channels = <&adc1 1>;
		numerator = <105600>;
		denominator = <5600>;
	};

	i-load {
		compatible = "adc-gain";
		io-channels = <&adc1 5>;
		// amp gain: 150/2.2, resistor: 2 mOhm
		numerator = <2200>;	// 1000*2.2
		denominator = <300>;	// 2*150
	};

	i-dcdc {
		compatible = "adc-gain";
		io-channels = <&adc1 6>;
		// amp gain: 150/2.2, resistor: 2 mOhm
		numerator = <2200>;	// 1000*2.2
		denominator = <300>;	// 2*150
	};

	aliases {
		uart-dbg = &usart1;
		uart-uext = &usart2;
		spi-uext = &spi1;
		i2c-uext = &i2c1;
	};
};

&usart1 {
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
	current-speed = <115200>;
	status = "okay";
};

&i2c1 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&i2c2 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	eeprom@50 {
		// Microchip 24AA32A
		compatible = "atmel,at24";
		reg = <0x50>;
		label = "EEPROM_0";
		size = <32768>;
		pagesize = <32>;		// 24AA01: 8 bytes
		address-width = <16>;		// 24AA01: 8 bit
		/*
		 * timeout of 5 ms as suggested in datasheet seems too optimistic
		 * (several write errors occured during testing)
		 */
		timeout = <7>;
	};
};

&spi1 {
	cs-gpios = <&gpioc 13 GPIO_ACTIVE_LOW>;
	status = "okay";
};

&iwdg {
	status = "okay";
};

&can1 {
	bus-speed = <250000>;
	status = "okay";
};
