/dts-v1/;
#include <st/l0/stm32l073Xz.dtsi>

/ {
	model = "Libre Solar PWM 2420 LUS";
	compatible = "st,stm32l073";

	pcb {
		compatible = "charge-controller";

		type = "PWM 2420 LUS";
		version-str = "v0.3";
		version-num = <3>;

		hs-voltage-max = <55>;
		ls-voltage-max = <32>;
		// The MCU, where internal temperature is measured, is close to the MOSFETs. Tests
		// showed that temperature at heat sink is only 10-20째C above measured internal
		// temp. As PWM CC doesn't use electrolytic cap for core charging function,
		// internal temperature of 70째C can be allowed (instead of default 50째C).
		internal-tref-max = <70>;
	};

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		a {
			gpios = <&gpiob 13 GPIO_ACTIVE_HIGH>;
			label = "LED pin A";
		};
		b {
			gpios = <&gpiob 14 GPIO_ACTIVE_HIGH>;
			label = "LED pin B";
		};
		c {
			gpios = <&gpiob 15 GPIO_ACTIVE_HIGH>;
			label = "LED pin C";
		};
	};

	outputs {
		compatible = "outputs";
		pwm_switch {
			label = "PWM power switch (solar panel)";
			pwms = <&pwm3 4 (20*1000*1000)>; /* 20 ms period = 50 Hz */
			// Current reduced to 15A. Increase to 20A PCB max values
			// only if attached to a big heat sink.
			current-max = <15>;
			kconfig-flag;	/* make node visible in Kconfig */
		};
		load {
			label = "Load output";
			gpios = <&gpiob 2 GPIO_ACTIVE_LOW>;
			current-max = <15>;
		};
		usb-pwr {
			label = "USB charging port disable";
			gpios = <&gpiob 5 GPIO_ACTIVE_LOW>;
		};
		boot0 {
			label = "BOOT0 pin trigger";
			gpios = <&gpiob 12 GPIO_ACTIVE_HIGH>;
		};
	};

	aliases {
		uart-dbg = &usart1;
		uart-uext = &usart2;
		spi-uext = &spi1;
		i2c-uext = &i2c1;
	};

	// this should normally go to Zephyr repo
	soc {
		timers3: timers@40000400 {
			compatible = "st,stm32-timers";
			reg = <0x40000400 0x400>;
			clocks = <&rcc STM32_CLOCK_BUS_APB1 0x00000002>;
			status = "okay";
			label = "TIMERS_3";

			pwm3: pwm {
				compatible = "st,stm32-pwm";
				status = "okay";
				st,prescaler = <10000>;
				label = "PWM_3";
				#pwm-cells = <2>;
			};
		};
	};
};

&usart1 {
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
	current-speed = <115200>;
	status = "okay";
};

&i2c1 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&spi1 {
	cs-gpios = <&gpioa 15 GPIO_ACTIVE_LOW>;
	status = "okay";
};

&iwdg {
	status = "okay";
};

&eeprom {
	status = "okay";
};
